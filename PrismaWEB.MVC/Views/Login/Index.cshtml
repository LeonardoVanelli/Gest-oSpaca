@model ProjetoModeloDDD.MVC.ViewModels.Sistema.SCadastroUsuarioLogadoViewModel

@{
    Layout = "~/Views/Shared/_Empty.cshtml";
    ViewBag.Title = "Login";
}
<div class="card card-login mx-auto mt-5">
    <div class="card-header">
        <img src="~/spaca.png"/>
        <div>Identifique-se</div>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Login)
                @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Seu Login" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Senha)
                @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Sua Senha" })
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox"> Relembrar Senha
                    </label>
                </div>
            </div>
            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            <div class="text-center">
                @*<a class="d-block small mt-3" href="register.html">Register an Account</a>*@
                <a class="d-block small" href="forgot-password.html">Esqueceu sua senha?</a>
            </div>
        }
    </div>
</div>


<style>
    body {
        background-color: #343a40 !important
    }

    .card-header > div {
        float: left;
        margin-top: 34px;
        margin-left: 15px;
        font-size: 24px;
    }

    .card-header > img {
        width: 70px;
        float: left;
    }

    .card-body {
        margin-left: 15px;
        margin-right: 15px;
    }
</style>